{
    "extends": "@tsconfig/svelte/tsconfig.json",

    "include": ["src/**/*", "svelte.config.js"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
    "compilerOptions": {
        "importsNotUsedAsValues": "remove",
        "esModuleInterop": true,
        "isolatedModules": false,
        "lib": [
            "dom",
            "es2015",
            "es2017",
            "es2020",
            "DOM",
            "ScriptHost",
            "DOM.Iterable",
            "WebWorker"
        ],
        "module": "es2020",
        "rootDir": ".",
        "types": ["svelte", "node"]
    }
}
